<div class="container-fluid">
  <div class="row" style="height: 85%">
    <div class="col-2" style="background-color: #aaa;">
      Welcome to
    </div>
    <div class="col-6" style="padding: 0; margin: 0">
      <div id="py-code" style="height: 92.5%; width: 100%">1 + 1</div>
      <nav class="navbar navbar-light bg-faded" style="position: absolute; bottom: 0%; width: 100%; height: 7.5%">
        <form class="form-inline">
          <button id="py-submit" class="btn btn-primary" type="button" style="width: 30%">Enter</button>
          <button id="py-reset"  class="btn btn-secondary" type="button" style="width: 30%">Reset</button>
        </form>
      </nav>
    </div>
    <div class="col-4" style="overflow-x: hidden; overflow-y: scroll;">
      <div id="py-console">
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'python.js' %>
<script>
    var editor = ace.edit("py-code");
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/python");
    document.getElementById('py-code').style.fontSize='1em';
    editor.getSession().setUseSoftTabs(true);
</script>
