<div class="container-fluid">
  <div class="row" style="height: 85%">
    <div class="col-2 left-panel">
        <div class="card">
          <div class="card-block">
            <h4 class="card-title">Hello World!</h4>
            <p class="card-text">Welcome to the first Python tutorial.</p>
          </div>
        </div>
    </div>
    <div class="col-6 mid-panel">
      <div id="py-code" class="code-editor">1 + 1</div>
      <nav class="navbar navbar-inverse code-nav">
        <form class="form-inline">
          <button id="py-submit" class="btn btn-primary code-nav-button" type="button">Enter</button>
        </form>
      </nav>
    </div>
    <div class="col-4 right-panel">
        <div id="py-console">
      </div>
    </div>
  </div>
</div>

<nav class="navbar fixed-bottom navbar-inverse bg-inverse" id="bottom-nav">
  <a class="navbar-brand" href="#">Fixed bottom</a>
</nav>

<%= stylesheet_link_tag 'tutorials.css' %>
<%= javascript_include_tag 'python.js' %>
<script>
    var editor = ace.edit("py-code");
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/python");
    document.getElementById('py-code').style.fontSize='1em';
    editor.getSession().setUseSoftTabs(true);
</script>
